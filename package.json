{
  "name": "type-mongodb",
  "version": "2.0.0-beta.2",
  "description": "A simple decorator based MongoDB ODM.",
  "repository": "https://github.com/j/type-mongodb",
  "keywords": [
    "orm",
    "odm",
    "mongo",
    "mongodb",
    "ts",
    "typescript",
    "javascript",
    "entity",
    "ddd",
    "data-mapper",
    "type-mongodb"
  ],
  "author": "Jordan <j@jrdn.org>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -b . --force",
    "clean": "rimraf lib",
    "watch": "tsc -w",
    "prepublishOnly": "npm run clean && npm run build",
    "release:next": "npm publish --access public --tag next",
    "release": "release-it",
    "mongo-start": "MONGODB_VERSION=4.x.x npx mongodb-runner start --topology=replicaset",
    "mongo-stop": "npx mongodb-runner stop --topology=replicaset",
    "test": "jest --runInBand --verbose --coverage",
    "pretest:ci": "npm run mongo-start",
    "test:ci": "npm run mongo-start && jest --verbose --coverage --ci --forceExit --detectOpenHandles --runInBand",
    "posttest:ci": "npm run mongo-stop",
    "pretty": "prettier '{src,tests}/**/*.ts' --write"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/uuid": "^8.3.0",
    "benchmark": "^2.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "mongodb": "^4.0.0-beta.4",
    "mongodb-runner": "^4.7.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.6.2",
    "ts-jest": "^26.1.1",
    "typescript": "^4.2.4",
    "uuid": "^8.3.2"
  },
  "optionalDependencies": {
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "mongodb": "^4.0.0-beta.4",
    "reflect-metadata": "^0.1.13"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
